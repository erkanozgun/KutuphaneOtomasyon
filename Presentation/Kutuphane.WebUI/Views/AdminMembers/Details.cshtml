@model Kutuphane.Application.Dtos.MemberDtos.MemberWithLoansDto

@{
    ViewData["Title"] = "Üye Detayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body text-center">
                <div class="display-1 text-secondary"><i class="bi bi-person-circle"></i></div>
                <h4>@Model.FullName</h4>
                <p class="text-muted">@Model.MemberNumber</p>
                <span class="badge @(Model.Status == "Aktif" ? "bg-success" : "bg-danger")">@Model.Status</span>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Email:</strong> @Model.Email</li>
                <li class="list-group-item"><strong>Tel:</strong> @Model.Phone</li>
                <li class="list-group-item"><strong>Kayıt:</strong> @Model.RegistrationDate?.ToShortDateString()</li>
            </ul>
        </div>
        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning w-100 mb-2">Bilgileri Düzenle</a>
            <a asp-action="Index" class="btn btn-outline-secondary w-100">Listeye Dön</a>
        </div>
    </div>

    <div class="col-md-8">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="active-tab" data-bs-toggle="tab" data-bs-target="#active-loans" type="button">
                    Aktif Ödünçler (@Model.ActiveLoans.Count())
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="history-tab" data-bs-toggle="tab" data-bs-target="#loan-history" type="button">
                    Geçmiş İşlemler (@Model.LoanHistory.Count())
                </button>
            </li>
        </ul>

        <div class="tab-content p-3 border border-top-0 bg-white shadow-sm" id="myTabContent">

            <div class="tab-pane fade show active" id="active-loans">
                @if (Model.ActiveLoans.Any())
                {
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Kitap</th>
                                <th>Veriliş</th>
                                <th>Son Tarih</th>
                                <th>Durum</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var loan in Model.ActiveLoans)
                            {
                                <tr>
                                    <td>@loan.BookTitle <span class="badge bg-secondary">Kopya: @loan.CopyNumber</span></td>
                                    <td>@loan.LoanDate.Value.ToShortDateString()</td>
                                    <td>
                                        @loan.DueDate.Value.ToShortDateString()
                                        @if (loan.IsOverdue)
                                        {
                                            <span class="badge bg-danger">@loan.OverdueDays Gün Gecikti!</span>
                                        }
                                    </td>
                                    <td>
                                        @loan.Status
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">Bu üyenin üzerinde şu an kitap bulunmuyor.</div>
                }
            </div>

            <div class="tab-pane fade" id="loan-history">
                @if (Model.LoanHistory.Any())
                {
                    <table class="table table-sm text-muted">
                        <thead>
                            <tr>
                                <th>Kitap</th>
                                <th>Alış</th>
                                <th>İade</th>
                                <th>Not</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var loan in Model.LoanHistory)
                            {
                                <tr>
                                    <td>@loan.BookTitle</td>
                                    <td>@loan.LoanDate.Value.ToShortDateString()</td>
                                    <td>@loan.ReturnDate?.ToShortDateString()</td>
                                    <td>@loan.Notes</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted text-center mt-3">Geçmiş işlem kaydı bulunamadı.</p>
                }
            </div>
        </div>
    </div>
</div>