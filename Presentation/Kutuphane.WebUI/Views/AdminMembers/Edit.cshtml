@model Kutuphane.Application.Dtos.MemberDtos.UpdateMemberDto

@{
    ViewData["Title"] = "Üye Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var memberId = ViewBag.MemberId;
}

<div class="card shadow-sm">
    <div class="card-header bg-warning">
        <h4 class="mb-0">Üye Bilgilerini Düzenle</h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit" asp-route-id="@memberId" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="FirstName" class="form-label">Ad</label>
                    <input asp-for="FirstName" class="form-control" required />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="LastName" class="form-label">Soyad</label>
                    <input asp-for="LastName" class="form-control" required />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Email" class="form-label">E-Posta</label>
                    <input asp-for="Email" type="email" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Phone" class="form-label">Telefon</label>
                    <input asp-for="Phone" class="form-control" required />
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Status" class="form-label">Üyelik Durumu</label>
                <select asp-for="Status" class="form-select">
                    <option value="Aktif">Aktif</option>
                    <option value="Pasif">Pasif</option>
                </select>
                <small class="text-muted">Pasif üyeler kitap ödünç alamaz.</small>
            </div>

            <div class="mb-3">
                <label asp-for="Address" class="form-label">Adres</label>
                <textarea asp-for="Address" class="form-control" rows="2"></textarea>
            </div>

            <div class="mb-3">
                <label asp-for="DateOfBirth" class="form-label">Doğum Tarihi</label>
                <input asp-for="DateOfBirth" type="date" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Notes" class="form-label">Notlar</label>
                <textarea asp-for="Notes" class="form-control"></textarea>
            </div>

            <div class="d-flex justify-content-end">
                <a asp-action="Index" class="btn btn-secondary me-2">İptal</a>
                <button type="submit" class="btn btn-warning">Güncelle</button>
            </div>
        </form>
    </div>
</div>