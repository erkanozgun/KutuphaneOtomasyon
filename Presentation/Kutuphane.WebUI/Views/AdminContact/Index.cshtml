@model IEnumerable<Kutuphane.Domain.Entities.ContactMessage>

@{
    ViewData["Title"] = "Gelen Kutusu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid p-0">
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <div>
                <h5 class="mb-0 fw-bold text-primary"><i class="bi bi-inbox me-2"></i>İletişim Mesajları</h5>
                <small class="text-muted">Kullanıcılardan gelen tüm mesajlar burada listelenir.</small>
            </div>
            <span class="badge bg-primary rounded-pill px-3">Toplam: @Model.Count()</span>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-secondary small text-uppercase">
                    <tr>
                        <th class="ps-4 py-3">Gönderen</th>
                        <th class="py-3">Konu</th>
                        <th class="py-3">Tarih</th>
                        <th class="py-3">Durum</th>
                        <th class="text-end pe-4 py-3">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                           
                            var rowClass = !item.IsRead ? "bg-warning bg-opacity-10 fw-bold" : "";

                            <tr class="@rowClass">
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 35px; height: 35px; font-size: 0.9rem;">
                                            @item.Name.Substring(0, 1).ToUpper()
                                        </div>
                                        <div class="ms-3">
                                            <span class="d-block text-dark">@item.Name</span>
                                            <small class="text-muted fw-normal">@item.Email</small>
                                        </div>
                                    </div>
                                </td>
                                <td>@item.Subject</td>
                                <td>
                                    <i class="bi bi-calendar3 me-1 text-muted"></i>
                                    @item.CreatedDate.ToString("dd.MM.yyyy HH:mm")
                                </td>
                                <td>
                                    @if (item.IsRead)
                                    {
                                        <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill px-3">Okundu</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark border border-warning rounded-pill px-3">Yeni Mesaj</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-controller="AdminContact" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">
                                        <i class="bi bi-eye"></i> Oku
                                    </a>

                                    <a asp-controller="AdminContact" asp-action="Delete" asp-route-id="@item.Id"
                                       onclick="return confirm('Bu mesajı silmek istediğinize emin misiniz?');"
                                       class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                                Henüz hiç mesaj yok.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>