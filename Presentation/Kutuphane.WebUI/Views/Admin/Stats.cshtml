@using Kutuphane.Application.Dtos.ReportDtos
@model AdminStatsDto

@{
    ViewData["Title"] = "Detaylı İstatistikler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="container-fluid px-4 mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold text-dark mb-0"><i class="bi bi-graph-up-arrow me-2 text-primary"></i>Detaylı Analiz</h3>
            <p class="text-muted small mb-0">Kütüphane performans raporları ve grafikler.</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">
            <i class="bi bi-arrow-left me-2"></i>Panele Dön
        </a>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm h-100 rounded-4">
                <div class="card-header bg-white py-3 border-bottom-0">
                    <h6 class="mb-0 fw-bold text-primary"><i class="bi bi-calendar-range me-2"></i>Son 6 Ay Ödünç Trendi</h6>
                </div>
                <div class="card-body">
                    <canvas id="loanChart" style="max-height: 350px; width: 100%;"></canvas>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm h-100 rounded-4">
                <div class="card-header bg-white py-3 border-bottom-0">
                    <h6 class="mb-0 fw-bold text-success"><i class="bi bi-pie-chart-fill me-2"></i>Kategori Dağılımı</h6>
                </div>
                <div class="card-body d-flex align-items-center justify-content-center position-relative">
                    <canvas id="categoryChart" style="max-height: 280px; width: 100%;"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-header bg-white py-3 d-flex align-items-center border-bottom-0">
                    <div class="bg-warning bg-opacity-10 text-warning p-2 rounded-circle me-3">
                        <i class="bi bi-trophy-fill fs-5"></i>
                    </div>
                    <div>
                        <h6 class="mb-0 fw-bold text-dark">Ayın Kitap Kurtları (Top 5)</h6>
                        <small class="text-muted">En çok ödünç kitap alan üyelerimiz.</small>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-secondary small text-uppercase">
                            <tr>
                                <th class="ps-4 py-3" style="width: 50px;">#</th>
                                <th class="py-3">Üye Bilgisi</th>
                                <th class="py-3">Üye Numarası</th>
                                <th class="text-center py-3">Okuduğu Kitap</th>
                                <th class="text-center py-3">Rozet</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int rank = 1;
                            }
                            @foreach (var reader in Model.TopReaders)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-muted">@rank</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center fw-bold me-3"
                                                 style="width: 35px; height: 35px;">
                                                @reader.MemberName.Substring(0, 1)
                                            </div>
                                            <span class="fw-bold text-dark">@reader.MemberName</span>
                                        </div>
                                    </td>
                                    <td class="text-muted font-monospace">@reader.MemberNumber</td>
                                    <td class="text-center">
                                        <span class="badge bg-primary bg-opacity-10 text-primary border border-primary-subtle rounded-pill px-3">
                                            @reader.TotalReadCount Adet
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        @if (rank == 1)
                                        {
                                            <i class="bi bi-trophy-fill text-warning fs-4" title="1. Sıra"></i>
                                        }
                                        else if (rank == 2)
                                        {

                                            <i class="bi bi-medal-fill text-secondary fs-4" title="2. Sıra"></i>
                                        }
                                        else if (rank == 3)
                                        {

                                            <i class="bi bi-medal-fill text-danger fs-4" style="color: #cd7f32 !important;" title="3. Sıra"></i>
                                        }
                                        else
                                        {

                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                                rank++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Renk Paleti (Modern)
    const colors = ['#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b', '#858796', '#5a5c69'];

    // --- 1. Çizgi Grafik (Aylık Ödünç) ---
    const ctxLoan = document.getElementById('loanChart').getContext('2d');
    new Chart(ctxLoan, {
        type: 'line',
        data: {
            labels: @Html.Raw(Json.Serialize(Model.Months)), // C# Listesini JS Array'e çevirir
            datasets: [{
                label: 'Ödünç Sayısı',
                data: @Html.Raw(Json.Serialize(Model.MonthlyLoanCounts)),
                borderColor: '#4e73df',
                backgroundColor: 'rgba(78, 115, 223, 0.05)',
                borderWidth: 3,
                pointBackgroundColor: '#4e73df',
                pointBorderColor: '#fff',
                pointHoverBackgroundColor: '#fff',
                pointHoverBorderColor: '#4e73df',
                tension: 0.4, // Çizgileri yumuşatır (kavisli yapar)
                fill: true
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: { display: false },
                tooltip: {
                    backgroundColor: "rgb(255,255,255)",
                    bodyColor: "#858796",
                    titleColor: '#6e707e',
                    borderColor: '#dddfeb',
                    borderWidth: 1,
                    padding: 10,
                    displayColors: false
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    grid: { borderDash: [2], drawBorder: false, color: "#f8f9fc" },
                    ticks: { padding: 10, color: "#858796" }
                },
                x: {
                    grid: { display: false, drawBorder: false },
                    ticks: { color: "#858796" }
                }
            }
        }
    });

    // --- 2. Halka Grafik (Kategoriler) ---
    const ctxCat = document.getElementById('categoryChart').getContext('2d');
    new Chart(ctxCat, {
        type: 'doughnut',
        data: {
            labels: @Html.Raw(Json.Serialize(Model.Categories)),
            datasets: [{
                data: @Html.Raw(Json.Serialize(Model.BookCountsByCategory)),
                backgroundColor: colors,
                hoverBackgroundColor: colors,
                hoverBorderColor: "rgba(234, 236, 244, 1)",
                borderWidth: 4 // Dilimler arası boşluk
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            cutout: '75%', // Halkanın inceliği
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: { usePointStyle: true, padding: 20, color: "#858796" }
                }
            }
        }
    });
</script>