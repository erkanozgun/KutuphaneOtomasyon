<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kütüphane Yönetim Paneli</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        :root {
            --sidebar-bg: #1e1e2f; /* Modern Koyu Lacivert */
            --sidebar-hover: #2d2d44;
            --active-color: #4e73df; /* Bootstrap Primary benzeri canlı mavi */
            --text-color: #adb5bd;
            --text-hover: #ffffff;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f3f4f6;
            height: 100vh;
            overflow: hidden;
        }

        /* Sidebar Genel Yapısı */
        .sidebar {
            height: 100vh;
            width: 260px;
            background-color: var(--sidebar-bg);
            color: #fff;
            display: flex;
            flex-direction: column;
            flex-shrink: 0;
            box-shadow: 4px 0 10px rgba(0,0,0,0.1);
            transition: all 0.3s;
            z-index: 1000;
        }

        /* Sidebar Logo Alanı */
        .sidebar-header {
            padding: 20px;
            border-bottom: 1px solid rgba(255,255,255,0.1);
            background: rgba(0,0,0,0.2);
        }

        /* Menü Linkleri */
        .sidebar .nav-link {
            color: var(--text-color);
            padding: 12px 20px;
            margin: 4px 10px;
            border-radius: 8px; /* Köşeleri yuvarlatılmış butonlar */
            font-size: 0.95rem;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
        }

            .sidebar .nav-link i {
                margin-right: 12px;
                font-size: 1.1rem;
                transition: transform 0.2s;
            }

            .sidebar .nav-link:hover {
                background-color: var(--sidebar-hover);
                color: var(--text-hover);
                transform: translateX(5px); /* Hover'da sağa hafif kayma */
            }

                .sidebar .nav-link:hover i {
                    transform: scale(1.1);
                }

            /* Aktif Link Stili */
            .sidebar .nav-link.active {
                background-color: var(--active-color);
                color: white;
                box-shadow: 0 4px 6px rgba(78, 115, 223, 0.3);
            }

        /* Alt Kullanıcı Alanı */
        .user-panel {
            margin-top: auto;
            padding: 20px;
            border-top: 1px solid rgba(255,255,255,0.1);
            background: rgba(0,0,0,0.1);
        }

        /* İçerik Alanı */
        .content-wrapper {
            flex-grow: 1;
            height: 100vh;
            overflow-y: auto;
            padding: 25px;
            position: relative;
        }

        /* Scrollbar Tasarımı (Webkit tarayıcılar için) */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        ::-webkit-scrollbar-thumb {
            background: #c1c1c1;
            border-radius: 4px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #a8a8a8;
            }

        /* Sidebar içindeki scrollbar */
        .sidebar-scroll {
            overflow-y: auto;
            flex-grow: 1;
        }

            .sidebar-scroll::-webkit-scrollbar {
                width: 5px;
            }

            .sidebar-scroll::-webkit-scrollbar-thumb {
                background: #555;
            }

        /* Navbar Özelleştirme */
        .top-navbar {
            background-color: white;
            border-radius: 12px;
            padding: 15px 25px;
            box-shadow: 0 2px 15px rgba(0,0,0,0.05);
            margin-bottom: 25px;
        }
    </style>
</head>
<body>

    <div class="d-flex w-100">
        <div class="sidebar">
            <div class="sidebar-header d-flex align-items-center">
                <i class="bi bi-book-half fs-3 text-warning me-2"></i>
                <div>
                    <span class="d-block fw-bold fs-5">LibraryPlus</span>
                    <small class="text-muted" style="font-size: 0.75rem;">Yönetim Paneli v1.0</small>
                </div>
            </div>

            <div class="sidebar-scroll py-3">
                <ul class="nav flex-column mb-auto">

                    <li class="nav-item mb-3 px-2">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light w-100 text-start d-flex align-items-center justify-content-center" style="border-color: #444;">
                            <i class="bi bi-arrow-left-circle me-2"></i> Siteye Dön
                        </a>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" ? "active" : "")">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li>
                        <a asp-controller="AdminBooks" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdminBooks" ? "active" : "")">
                            <i class="bi bi-journal-album"></i> Kitap Yönetimi
                        </a>
                    </li>
                    <li>
                        <a asp-controller="AdminMembers" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdminMembers" ? "active" : "")">
                            <i class="bi bi-people"></i> Üye Yönetimi
                        </a>
                    </li>
                    <li>
                        <a asp-controller="AdminLoans" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdminLoans" ? "active" : "")">
                            <i class="bi bi-arrow-left-right"></i> Ödünç İşlemleri
                        </a>
                    </li>

                    @if (User.IsInRole("Admin"))
                    {
                        <li>
                            <a asp-controller="AdminUsers" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdminUsers" ? "active" : "")">
                                <i class="bi bi-shield-lock"></i> Personel/Adminler
                            </a>
                        </li>
                    }

                    <li>
                        <a asp-controller="AdminContact" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdminContact" ? "active" : "")">
                            <i class="bi bi-envelope"></i> Mesajlar
                        </a>
                    </li>
                </ul>
            </div>

            <div class="user-panel dropdown">
                <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                    <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-2" style="width:35px; height:35px;">
                        <span class="fw-bold text-white">@User.Identity.Name?.Substring(0, 1).ToUpper()</span>
                    </div>
                    <div class="d-flex flex-column">
                        <span class="fw-bold" style="font-size:0.9rem;">@User.Identity.Name</span>
                        <span class="text-muted" style="font-size:0.7rem;">
                            @(User.IsInRole("Admin") ? "Yönetici" : "Kütüphaneci")
                        </span>
                    </div>
                </a>
                <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                    <li><a class="dropdown-item" asp-controller="Members" asp-action="Profile">Profilim</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <form asp-controller="Account" asp-action="Logout" method="post">
                            <button type="submit" class="dropdown-item text-danger"><i class="bi bi-box-arrow-right me-2"></i>Çıkış Yap</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>

        <div class="content-wrapper">
            <nav class="top-navbar d-flex justify-content-between align-items-center">
                <div>
                    <span class="h5 mb-0 text-primary fw-bold">@ViewData["Title"]</span>
                </div>
                <div class="d-flex align-items-center text-muted">
                    <i class="bi bi-calendar3 me-2"></i>
                    <span>@DateTime.Now.ToString("dd MMMM yyyy, dddd")</span>
                </div>
            </nav>

            <main>
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function () {
            // SweetAlert Bildirimleri
            @if (TempData["Success"] != null)
            {
                    <text>
                    Swal.fire({
                        toast: true,
                        position: 'top-end',
                        icon: 'success',
                        title: '@Html.Raw(TempData["Success"])',
                        showConfirmButton: false,
                        timer: 3000,
                        timerProgressBar: true
                    });
                    </text>
            }
            @if (TempData["Error"] != null)
            {
                    <text>
                    Swal.fire({
                        title: 'Hata!',
                        text: '@Html.Raw(TempData["Error"])',
                        icon: 'error',
                        confirmButtonText: 'Tamam',
                        confirmButtonColor: '#dc3545'
                    });
                    </text>
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>