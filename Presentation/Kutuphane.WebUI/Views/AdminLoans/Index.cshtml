@model IEnumerable<Kutuphane.Application.Dtos.LoanDtos.ResultLoanDto>

@{
    ViewData["Title"] = "Ödünç İşlemleri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .cursor-pointer {
        cursor: pointer;
        transition: background 0.2s;
    }

        .cursor-pointer:hover {
            background-color: rgba(0,0,0,0.02);
        }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="text-primary fw-bold mb-0"><i class="bi bi-arrow-left-right"></i> Ödünç Takip</h2>
        <small class="text-muted">Aktif ve gecikmiş ödünç işlemlerini yönetin.</small>
    </div>
    <div>
        <a asp-action="Overdue" class="btn btn-outline-danger me-2 shadow-sm">
            <i class="bi bi-exclamation-circle"></i> Gecikmişler
        </a>
        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-lg"></i> Ödünç Ver
        </a>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-secondary small text-uppercase">
                    <tr>
                        <th class="ps-4">Üye Bilgisi</th>
                        <th>Kitap & Kopya</th>
                        <th>Veriliş</th>
                        <th>Son Tarih</th>
                        <th>Durum</th>
                        <th class="text-end pe-4">İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var loan in Model)
                    {
                        var rowClass = loan.IsOverdue ? "table-danger bg-opacity-10" : "cursor-pointer";
                        var statusBadge = loan.IsOverdue ? "bg-danger" : "bg-success";
                        var statusIcon = loan.IsOverdue ? "bi-exclamation-triangle-fill" : "bi-check-circle-fill";

                        <tr class="@rowClass" onclick="window.location.href = '@Url.Action("Details", new { id = loan.Id })'">

                            <td class="ps-4 py-3">
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                        <i class="bi bi-person-fill fs-5"></i>
                                    </div>
                                    <div>
                                        <div class="fw-bold text-dark">@loan.MemberName</div>
                                        <small class="text-muted">ID: #@loan.MemberId</small>
                                    </div>
                                </div>
                            </td>

                            <td>
                                <div class="fw-bold">@loan.BookTitle</div>
                                <span class="badge bg-light text-dark border"><i class="bi bi-upc"></i> Kopya: @loan.CopyNumber</span>
                            </td>

                            <td class="text-muted">@loan.LoanDate?.ToShortDateString()</td>
                            <td>
                                <div class="fw-bold @(loan.IsOverdue ? "text-danger" : "text-dark")">
                                    @loan.DueDate?.ToShortDateString()
                                </div>
                                @if (loan.IsOverdue)
                                {
                                    <small class="text-danger fw-bold"><i class="bi bi-clock-history"></i> @loan.OverdueDays gün gecikme</small>
                                }
                            </td>

                            <td>
                                <span class="badge @statusBadge rounded-pill px-3 py-2">
                                    <i class="bi @statusIcon me-1"></i> @loan.Status
                                </span>
                            </td>

                            <td class="text-end pe-4">
                                <button type="button" class="btn btn-warning btn-sm shadow-sm"
                                        onclick="event.stopPropagation();"
                                        data-bs-toggle="modal"
                                        data-bs-target="#returnModal-@loan.Id">
                                    <i class="bi bi-box-arrow-in-down-left"></i> İade Al
                                </button>

                                <div class="modal fade" id="returnModal-@loan.Id" tabindex="-1" onclick="event.stopPropagation();">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header bg-warning text-dark">
                                                <h5 class="modal-title"><i class="bi bi-arrow-return-left"></i> İade İşlemi</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <form asp-action="ReturnBook" method="post">
                                                <div class="modal-body text-start">
                                                    <input type="hidden" name="id" value="@loan.Id" />

                                                    <div class="alert alert-light border d-flex align-items-center mb-3">
                                                        <i class="bi bi-book fs-3 text-primary me-3"></i>
                                                        <div>
                                                            <div class="fw-bold">@loan.BookTitle</div>
                                                            <div class="small text-muted">Üye: @loan.MemberName</div>
                                                        </div>
                                                    </div>

                                                    @if (loan.IsOverdue)
                                                    {
                                                        <div class="alert alert-danger border-danger">
                                                            <i class="bi bi-exclamation-octagon-fill me-2"></i>
                                                            <strong>DİKKAT:</strong> Kitap @loan.OverdueDays gün gecikmiş.
                                                        </div>
                                                    }

                                                    <div class="form-floating">
                                                        <textarea name="returnNotes" class="form-control" placeholder="Notlar" style="height: 100px"></textarea>
                                                        <label>İade Notu (Hasar, durum vb.)</label>
                                                    </div>
                                                </div>
                                                <div class="modal-footer bg-light">
                                                    <button type="button" class="btn btn-link text-secondary text-decoration-none" data-bs-dismiss="modal">Vazgeç</button>
                                                    <button type="submit" class="btn btn-primary px-4">İadeyi Onayla</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox fs-1 text-muted opacity-25"></i>
                <p class="text-muted mt-2">Şu an aktif bir ödünç kaydı bulunmamaktadır.</p>
            </div>
        }
    </div>
</div>