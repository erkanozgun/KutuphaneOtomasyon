@model IEnumerable<Kutuphane.Application.Dtos.AuthDtos.UserDto>

@{
    ViewData["Title"] = "Personel Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary"><i class="bi bi-shield-lock"></i> Personel ve Adminler</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-person-plus-fill"></i> Yeni Personel Ekle
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Kullanıcı Bilgisi</th>
                        <th>Rol</th>
                        <th>Durum</th>
                        <th>Son Giriş</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-light rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 45px; height: 45px;">
                                        <span class="fs-5 fw-bold text-secondary">
                                            @user.FirstName.Substring(0, 1)@user.LastName.Substring(0, 1)
                                        </span>
                                    </div>
                                    <div>
                                        <div class="fw-bold text-dark">@user.FullName</div>
                                        <div class="small text-muted">@@@user.Username | @user.Email</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                @if (user.Role == "Admin")
                                {
                                    <span class="badge bg-danger rounded-pill">Yönetici</span>
                                }
                                else if (user.Role == "Librarian")
                                {
                                    <span class="badge bg-warning text-dark rounded-pill">Personel</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary rounded-pill">Üye</span>
                                }
                            </td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <span class="text-success small"><i class="bi bi-circle-fill"></i> Aktif</span>
                                }
                                else
                                {
                                    <span class="text-secondary small"><i class="bi bi-circle-fill"></i> Pasif</span>
                                }
                            </td>
                            <td>
                                <span class="small text-muted">
                                    @(user.LastLoginDate.HasValue? user.LastLoginDate.Value.ToString("dd.MM.yyyy HH:mm") : "Hiç girmedi")
                                </span>
                            </td>
                            <td class="text-end">
                                <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline" onsubmit="return confirm('@user.Username kullanıcısını silmek istediğinize emin misiniz?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Sil">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>