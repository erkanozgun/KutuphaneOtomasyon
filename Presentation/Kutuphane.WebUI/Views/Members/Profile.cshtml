

@model Kutuphane.Application.Dtos.AuthDtos.UserDto

@{
    ViewData["Title"] = "Profilim";
    var member = ViewBag.Member as Kutuphane.Application.Dtos.MemberDtos.ResultMemberDto;
}

<div class="container" style="margin-top: 60px; margin-bottom: 80px;">
    <div class="row">

        <!-- Sol Taraf - Profil Kartı -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center p-5">
                    <i class="bi bi-person-circle display-1 text-primary"></i>
                    <h4 class="mt-3 mb-1">@Model.FullName</h4>
                    <p class="text-muted mb-3">@@@Model.Username</p>

                    <span class="badge bg-primary mb-3">@Model.Role</span>

                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Pasif</span>
                    }

                    <hr class="my-4">

                    <div class="d-grid gap-2">
                        <a asp-controller="Members" asp-action="MyLoans" class="btn btn-outline-success">
                            <i class="bi bi-book"></i> Ödünç Kitaplarım
                        </a>
                        <a asp-controller="Members" asp-action="ChangePassword" class="btn btn-outline-primary">
                            <i class="bi bi-key"></i> Şifre Değiştir
                        </a>
                      
                        <a asp-controller="Members" asp-action="EditProfile" class="btn btn-outline-primary">
                            <i class="bi bi-key"></i> Bilgileri Güncelle
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sağ Taraf - Detaylı Bilgiler -->
        <div class="col-lg-8">

            <!-- Kullanıcı Bilgileri -->
            <div class="card shadow-sm mb-4">
                <div class="card-body p-4">
                    <h5 class="card-title mb-4">
                        <i class="bi bi-person"></i> Kullanıcı Bilgileri
                    </h5>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <strong><i class="bi bi-person"></i> Ad:</strong>
                            <p class="mb-0 text-muted">@Model.FirstName</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong><i class="bi bi-person"></i> Soyad:</strong>
                            <p class="mb-0 text-muted">@Model.LastName</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong><i class="bi bi-at"></i> Kullanıcı Adı:</strong>
                            <p class="mb-0 text-muted">@Model.Username</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong><i class="bi bi-envelope"></i> Email:</strong>
                            <p class="mb-0 text-muted">@Model.Email</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong><i class="bi bi-shield"></i> Rol:</strong>
                            <p class="mb-0 text-muted">@Model.Role</p>
                        </div>
                        @if (Model.LastLoginDate.HasValue)
                        {
                            <div class="col-md-6 mb-3">
                                <strong><i class="bi bi-clock"></i> Son Giriş:</strong>
                                <p class="mb-0 text-muted">@Model.LastLoginDate.Value.ToString("dd.MM.yyyy HH:mm")</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Üye Bilgileri (Varsa) -->
            @if (member != null)
            {
                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        <h5 class="card-title mb-4">
                            <i class="bi bi-card-text"></i> Üyelik Bilgileri
                        </h5>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <strong><i class="bi bi-credit-card"></i> Üye Numarası:</strong>
                                <p class="mb-0 text-muted">@member.MemberNumber</p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <strong><i class="bi bi-telephone"></i> Telefon:</strong>
                                <p class="mb-0 text-muted">@member.Phone</p>
                            </div>
                            @if (!string.IsNullOrEmpty(member.Address))
                            {
                                <div class="col-md-12 mb-3">
                                    <strong><i class="bi bi-geo-alt"></i> Adres:</strong>
                                    <p class="mb-0 text-muted">@member.Address</p>
                                </div>
                            }
                            @if (member.DateOfBirth.HasValue)
                            {
                                <div class="col-md-6 mb-3">
                                    <strong><i class="bi bi-calendar"></i> Doğum Tarihi:</strong>
                                    <p class="mb-0 text-muted">@member.DateOfBirth.Value.ToString("dd.MM.yyyy")</p>
                                </div>
                            }
                            <div class="col-md-6 mb-3">
                                <strong><i class="bi bi-calendar-check"></i> Kayıt Tarihi:</strong>
                                <p class="mb-0 text-muted">@member.RegistrationDate.Value.ToString("dd.MM.yyyy")</p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <strong><i class="bi bi-check-circle"></i> Durum:</strong>
                                @if (member.Status == "Aktif")
                                {
                                    <span class="badge bg-success">@member.Status</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@member.Status</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>

    </div>
</div>