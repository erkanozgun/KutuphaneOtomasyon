@model Kutuphane.Application.Dtos.AuthDtos.UserDto

@{
    ViewData["Title"] = "Profilim";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Controller'dan gelen verileri alıyoruz
    var member = ViewBag.Member as Kutuphane.Application.Dtos.MemberDtos.ResultMemberDto;
    var messages = ViewBag.UserMessages as List<Kutuphane.Domain.Entities.ContactMessage>;
}

<div class="container py-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-1">Hesabım</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Anasayfa</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Profilim</li>
                </ol>
            </nav>
        </div>
        <div>
            <span class="badge bg-light text-dark border px-3 py-2 rounded-pill shadow-sm">
                <i class="bi bi-calendar-event me-1 text-primary"></i> Kayıt: @(member?.RegistrationDate?.ToString("dd.MM.yyyy") ?? "-")
            </span>
        </div>
    </div>

    <div class="row g-4">

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm mb-4 text-center h-100">
                <div class="card-body p-4 d-flex flex-column align-items-center">
                    <div class="position-relative mb-3">
                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center shadow-sm" style="width: 100px; height: 100px; font-size: 2.5rem;">
                            @Model.FirstName.Substring(0, 1).ToUpper()
                        </div>
                        <span class="position-absolute bottom-0 end-0 p-2 bg-success border border-white rounded-circle">
                            <span class="visually-hidden">Aktif</span>
                        </span>
                    </div>

                    <h4 class="fw-bold mb-1">@Model.FullName</h4>
                    <p class="text-muted mb-2">@@@Model.Username</p>

                    <div class="mb-4">
                        <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2 rounded-pill me-1">
                            <i class="bi bi-shield-check"></i> @Model.Role
                        </span>
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success bg-opacity-10 text-success px-3 py-2 rounded-pill">
                                <i class="bi bi-check-circle"></i> Aktif Üye
                            </span>
                        }
                    </div>

                    <div class="w-100 mt-auto">
                        <a asp-controller="Members" asp-action="EditProfile" class="btn btn-primary w-100 rounded-pill mb-2">
                            <i class="bi bi-pencil-square me-2"></i> Bilgileri Güncelle
                        </a>
                        <a asp-controller="Members" asp-action="ChangePassword" class="btn btn-outline-secondary w-100 rounded-pill">
                            <i class="bi bi-key me-2"></i> Şifre Değiştir
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">

            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-0 pt-4 pb-0 d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold mb-0"><i class="bi bi-person-lines-fill text-primary me-2"></i> Kişisel Bilgiler</h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded-3 h-100">
                                <small class="text-uppercase text-muted fw-bold d-block mb-1" style="font-size: 0.7rem;">E-Posta Adresi</small>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-envelope fs-5 text-secondary me-2"></i>
                                    <span class="text-dark fw-medium">@Model.Email</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded-3 h-100">
                                <small class="text-uppercase text-muted fw-bold d-block mb-1" style="font-size: 0.7rem;">Telefon Numarası</small>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-phone fs-5 text-secondary me-2"></i>
                                    <span class="text-dark fw-medium">@(member?.Phone ?? "-")</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded-3 h-100">
                                <small class="text-uppercase text-muted fw-bold d-block mb-1" style="font-size: 0.7rem;">Üye Numarası</small>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-card-heading fs-5 text-secondary me-2"></i>
                                    <span class="text-dark fw-medium">@(member?.MemberNumber ?? "-")</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded-3 h-100">
                                <small class="text-uppercase text-muted fw-bold d-block mb-1" style="font-size: 0.7rem;">Doğum Tarihi</small>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-cake2 fs-5 text-secondary me-2"></i>
                                    <span class="text-dark fw-medium">@(member?.DateOfBirth?.ToString("dd MMMM yyyy") ?? "-")</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="p-3 bg-light rounded-3 h-100">
                                <small class="text-uppercase text-muted fw-bold d-block mb-1" style="font-size: 0.7rem;">Adres</small>
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-geo-alt fs-5 text-secondary me-2 mt-1"></i>
                                    <span class="text-dark fw-medium">@(member?.Address ?? "Adres bilgisi girilmemiş.")</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm bg-primary text-white overflow-hidden position-relative mb-4">
                <div class="card-body p-4 position-relative z-2">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="fw-bold mb-1">Kitaplığım</h5>
                            <p class="mb-0 opacity-75">Ödünç aldığınız kitapları ve iade tarihlerini buradan takip edebilirsiniz.</p>
                        </div>
                        <a asp-controller="Members" asp-action="MyLoans" class="btn btn-light text-primary fw-bold rounded-pill px-4 shadow-sm">
                            Görüntüle <i class="bi bi-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
                <i class="bi bi-journal-bookmark-fill position-absolute text-white opacity-10" style="font-size: 8rem; right: -20px; bottom: -30px;"></i>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 pt-4 pb-0 d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold mb-0 text-success">
                        <i class="bi bi-chat-dots-fill me-2"></i> İletişim Geçmişi
                    </h5>
                    <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3">
                        @(messages?.Count ?? 0) Mesaj
                    </span>
                </div>

                <div class="card-body p-4">
                    @if (messages != null && messages.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var msg in messages)
                            {
                                
                                var hasReply = !string.IsNullOrEmpty(msg.AdminReplay);
                                var cardClass = hasReply ? "border-success border-start border-4" : "border-light";

                                <div class="list-group-item p-3 mb-3 bg-light rounded-3 border-0 @cardClass shadow-sm">

                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <h6 class="fw-bold text-dark mb-0">
                                            @if (hasReply)
                                            {
                                                <i class="bi bi-check-circle-fill text-success me-1"></i>
                                            }
                                            @msg.Subject
                                        </h6>
                                        <small class="text-muted">@msg.CreatedDate.ToString("dd.MM.yyyy HH:mm")</small>
                                    </div>

                                    <p class="text-secondary small mb-2 fst-italic">"@msg.Message"</p>

                                    @if (hasReply)
                                    {
                                        <div class="mt-3 p-3 bg-white rounded-3 border border-success-subtle position-relative">
                                            <span class="position-absolute top-0 start-0 translate-middle badge rounded-pill bg-success">
                                                YANIT
                                            </span>
                                            <div class="d-flex align-items-center mb-1 mt-1">
                                                <span class="fw-bold text-success small text-uppercase">Yönetici Mesajı:</span>
                                                <small class="ms-auto text-muted" style="font-size: 0.7rem;">
                                                    @msg.ReplayDate?.ToString("dd.MM.yyyy HH:mm")
                                                </small>
                                            </div>
                                            <p class="mb-0 text-dark small">@msg.AdminReplay</p>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="mt-2">
                                            <span class="badge bg-secondary bg-opacity-25 text-secondary border border-secondary-subtle">
                                                <i class="bi bi-hourglass-split"></i> Yetkili yanıtı bekleniyor...
                                            </span>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">
                            <div class="mb-3">
                                <i class="bi bi-inbox fs-1 opacity-25"></i>
                            </div>
                            <h6 class="fw-bold">Mesaj Kutunuz Boş</h6>
                            <p class="small mb-3">Yöneticilerle iletişime geçmek için aşağıdaki butonu kullanabilirsiniz.</p>
                            <a href="/Home/Contact" class="btn btn-sm btn-outline-primary rounded-pill px-4">
                                <i class="bi bi-envelope-plus me-1"></i> Yeni Mesaj Gönder
                            </a>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>