@model Kutuphane.WebUI.Models.ViewModels.BookAdminDetailsViewModel

@{
    ViewData["Title"] = "Kitap Detayları";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    // Basit istatistikler
    var totalCopies = Model.Copies.Count();
    var availableCopies = Model.Copies.Count(c => c.Status == "Rafta");
    var borrowedCopies = Model.Copies.Count(c => c.Status == "Oduncte");
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary"><i class="bi bi-info-circle"></i> Kitap Detayları</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Listeye Dön
    </a>
</div>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100">
            <div class="card-body text-center">
                @if (!string.IsNullOrEmpty(Model.Book.ImageUrl))
                {
                    <img src="@Model.Book.ImageUrl" class="img-fluid rounded shadow mb-3" style="max-height: 300px;">
                }
                else
                {
                    <div class="bg-light rounded d-flex align-items-center justify-content-center mb-3 mx-auto" style="height: 250px; width: 180px;">
                        <i class="bi bi-book display-1 text-secondary"></i>
                    </div>
                }

                <h4 class="fw-bold">@Model.Book.Title</h4>
                <p class="text-muted mb-1">@Model.Book.Author</p>
                <span class="badge bg-info text-dark">@Model.Book.Category</span>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between">
                    <span class="fw-bold">ISBN:</span> <span>@Model.Book.ISBN</span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    <span class="fw-bold">Yayın Yılı:</span> <span>@Model.Book.PublicationYear</span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    <span class="fw-bold">Yayınevi:</span> <span>@(Model.Book.Publisher ?? "-")</span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    <span class="fw-bold">Sayfa:</span> <span>@Model.Book.PageCount</span>
                </li>
            </ul>
            <div class="card-body">
                <a asp-action="Edit" asp-route-id="@Model.Book.Id" class="btn btn-warning w-100">
                    <i class="bi bi-pencil-square"></i> Bilgileri Düzenle
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-8">

        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card bg-primary text-white text-center p-3 shadow-sm">
                    <h3 class="fw-bold m-0">@totalCopies</h3>
                    <small>Toplam Kopya</small>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-success text-white text-center p-3 shadow-sm">
                    <h3 class="fw-bold m-0">@availableCopies</h3>
                    <small>Rafta (Müsait)</small>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-warning text-dark text-center p-3 shadow-sm">
                    <h3 class="fw-bold m-0">@borrowedCopies</h3>
                    <small>Ödünçte</small>
                </div>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h5 class="m-0 text-primary"><i class="bi bi-list-ol"></i> Kopya Listesi</h5>
                <button type="button" class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#addCopyModal">
                    <i class="bi bi-plus-lg"></i> Stok Ekle
                </button>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">Kopya No</th>
                                <th>Raf Konumu</th>
                                <th>Durum</th>
                                <th class="text-end pe-4">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var copy in Model.Copies)
                            {
                                <tr>
                                    <td class="ps-4 font-monospace">@copy.CopyNumber</td>
                                    <td><i class="bi bi-geo-alt"></i> @copy.ShelfLocation</td>
                                    <td>
                                        @if (copy.Status == "Rafta")
                                        {
                                            <span class="badge bg-success">Rafta</span>
                                        }
                                        else if (copy.Status == "Oduncte")
                                        {
                                            <span class="badge bg-warning text-dark">Ödünçte</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@copy.Status</span>
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        <form asp-action="DeleteCopy" method="post" style="display:inline;" onsubmit="return confirm('Bu kopyayı silmek istediğinize emin misiniz?');">
                                            <input type="hidden" name="copyId" value="@copy.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Kopyayı Sil">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                            @if (!Model.Copies.Any())
                            {
                                <tr>
                                    <td colspan="4" class="text-center py-4 text-muted">Hiç kopya bulunamadı.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addCopyModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">Stok Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="AddCopies" method="post">
                <div class="modal-body">
                    <input type="hidden" name="bookId" value="@Model.Book.Id" />
                    <p class="text-center"><strong>@Model.Book.Title</strong> kitabına kopya ekleniyor.</p>
                    <div class="mb-3">
                        <label class="form-label">Adet</label>
                        <input type="number" name="count" class="form-control" value="1" min="1" max="50" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Raf Konumu</label>
                        <input type="text" name="shelfLocation" class="form-control" placeholder="Örn: A-12" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-success">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>