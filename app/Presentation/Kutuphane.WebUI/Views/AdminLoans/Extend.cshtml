@model Kutuphane.WebUI.Models.ViewModels.LoanExtendViewModel

@{
    ViewData["Title"] = "Süre Uzat";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">

            <!-- Başlık -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold text-dark mb-0">
                        <i class="bi bi-calendar-plus text-success me-2"></i>Süre Uzat
                    </h2>
                    <span class="text-muted">İşlem #@Model.Id</span>
                </div>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-light border rounded-pill px-4">
                    <i class="bi bi-arrow-left me-2"></i>İptal
                </a>
            </div>

            <!-- Uyarı Mesajı -->
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show rounded-3 shadow-sm" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Mevcut Durum Kartı -->
            <div class="card border-0 shadow-sm rounded-4 mb-4 bg-gradient"
                style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="card-body p-4 text-white">
                    <div class="row align-items-center">
                        <div class="col">
                            <span class="opacity-75">Kitap</span>
                            <h5 class="fw-bold mb-1">@Model.BookTitle</h5>
                            <small class="opacity-75">Üye: @Model.MemberName</small>
                        </div>
                        <div class="col-auto text-end">
                            <small class="opacity-75 d-block">Mevcut Son Tarih</small>
                            <span class="fs-4 fw-bold">@Model.CurrentDueDate.ToString("dd.MM.yyyy")</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Uzatma Formu -->
            <div class="card border-0 shadow-sm rounded-4 border-top border-4 border-success">
                <div class="card-header bg-white py-3 border-0">
                    <h6 class="fw-bold mb-0"><i class="bi bi-plus-circle text-success me-2"></i>Uzatma Detayları</h6>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Extend" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="MemberName" />
                        <input type="hidden" asp-for="BookTitle" />
                        <input type="hidden" asp-for="CurrentDueDate" />

                        <!-- Uzatma Süresi -->
                        <div class="mb-4">
                            <label asp-for="ExtensionDays" class="form-label fw-bold">
                                <i class="bi bi-calendar-range text-success me-1"></i>Kaç Gün Uzatılsın?
                            </label>
                            <div class="row g-2">
                                <div class="col">
                                    <div class="btn-group w-100" role="group">
                                        <input type="radio" class="btn-check" name="extensionPreset" id="ext3"
                                            onclick="setDays(3)">
                                        <label class="btn btn-outline-success" for="ext3">3 Gün</label>

                                        <input type="radio" class="btn-check" name="extensionPreset" id="ext7"
                                            onclick="setDays(7)" checked>
                                        <label class="btn btn-outline-success" for="ext7">7 Gün</label>

                                        <input type="radio" class="btn-check" name="extensionPreset" id="ext14"
                                            onclick="setDays(14)">
                                        <label class="btn btn-outline-success" for="ext14">14 Gün</label>

                                        <input type="radio" class="btn-check" name="extensionPreset" id="ext30"
                                            onclick="setDays(30)">
                                        <label class="btn btn-outline-success" for="ext30">30 Gün</label>
                                    </div>
                                </div>
                            </div>
                            <div class="mt-3">
                                <input type="number" asp-for="ExtensionDays" id="extensionDaysInput"
                                    class="form-control" min="1" max="30" />
                                <span asp-validation-for="ExtensionDays" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Yeni Tarih Önizleme -->
                        <div class="alert alert-success bg-success-subtle border-success mb-4">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="bi bi-arrow-right-circle me-2"></i>
                                    <span class="fw-bold">Yeni Son Teslim Tarihi:</span>
                                </div>
                                <span id="newDatePreview" class="fs-5 fw-bold text-success">
                                    @Model.CurrentDueDate.AddDays(7).ToString("dd.MM.yyyy")
                                </span>
                            </div>
                        </div>

                        <!-- Uzatma Nedeni -->
                        <div class="mb-4">
                            <label asp-for="ExtensionReason" class="form-label fw-bold">
                                <i class="bi bi-chat-left-text text-muted me-1"></i>Uzatma Nedeni (Opsiyonel)
                            </label>
                            <select asp-for="ExtensionReason" class="form-select mb-2">
                                <option value="">-- Bir neden seçin veya yazın --</option>
                                <option value="Üye talebi">Üye talebi</option>
                                <option value="Kitabı bitiremedim">Kitabı bitiremedim</option>
                                <option value="Sağlık sorunu">Sağlık sorunu</option>
                                <option value="Seyahate çıkacak">Seyahate çıkacak</option>
                                <option value="İlk uzatma hakkı">İlk uzatma hakkı</option>
                            </select>
                            <input type="text" class="form-control" id="customReason"
                                placeholder="Veya özel bir neden yazın..."
                                onchange="document.getElementById('ExtensionReason').value = this.value" />
                        </div>

                        <!-- Butonlar -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg py-3 rounded-pill shadow">
                                <i class="bi bi-check-circle-fill me-2"></i>Süreyi Uzat
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id"
                                class="btn btn-light btn-lg border rounded-pill">
                                <i class="bi bi-x-circle me-2"></i>İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const currentDueDate = new Date('@Model.CurrentDueDate.ToString("yyyy-MM-dd")');

        function setDays(days) {
            document.getElementById('extensionDaysInput').value = days;
            updatePreview();
        }

        function updatePreview() {
            const days = parseInt(document.getElementById('extensionDaysInput').value) || 7;
            const newDate = new Date(currentDueDate);
            newDate.setDate(newDate.getDate() + days);

            const formatted = newDate.toLocaleDateString('tr-TR', {
                day: '2-digit',
                month: '2-digit',
                year: 'numeric'
            });
            document.getElementById('newDatePreview').textContent = formatted;
        }

        document.getElementById('extensionDaysInput').addEventListener('input', updatePreview);
    </script>
}
