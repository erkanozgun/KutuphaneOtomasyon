@model Kutuphane.WebUI.Models.ViewModels.LoanEditViewModel

@{
    ViewData["Title"] = "Ödünç Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    string statusColor = Model.ReturnDate.HasValue ? "success" : (Model.IsOverdue ? "danger" : "primary");
    string statusText = Model.ReturnDate.HasValue ? "İade Edildi" : (Model.IsOverdue ? "Gecikmiş" : "Devam Ediyor");
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <!-- Başlık -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold text-dark mb-0">
                        <i class="bi bi-pencil-square text-primary me-2"></i>Ödünç Düzenle
                    </h2>
                    <span class="text-muted">İşlem #@Model.Id</span>
                </div>
                <div class="d-flex gap-2">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-light border rounded-pill px-4">
                        <i class="bi bi-arrow-left me-2"></i>Detaya Dön
                    </a>
                    <a asp-action="Extend" asp-route-id="@Model.Id" class="btn btn-success rounded-pill px-4">
                        <i class="bi bi-calendar-plus me-2"></i>Süre Uzat
                    </a>
                </div>
            </div>

            <!-- Hata Mesajları -->
            @if (!ViewData.ModelState.IsValid)
            {
                    <div class="alert alert-danger alert-dismissible fade show rounded-3 shadow-sm" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                                <span>@error.ErrorMessage</span>
                    }
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
            }

            <!-- Bilgi Kartı -->
            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-header bg-white py-3 border-0 d-flex justify-content-between align-items-center">
                    <h6 class="fw-bold mb-0"><i class="bi bi-info-circle text-info me-2"></i>Kayıt Bilgileri</h6>
                    <span class="badge bg-@statusColor">@statusText</span>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <!-- Üye Bilgisi -->
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                                    <i class="bi bi-person-fill fs-4"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Üye</small>
                                    <span class="fw-bold text-dark">@Model.MemberName</span>
                                    <span class="badge bg-light text-dark border ms-1">#@Model.MemberId</span>
                                </div>
                            </div>
                        </div>

                        <!-- Kitap Bilgisi -->
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <div class="bg-warning bg-opacity-10 text-warning rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                                    <i class="bi bi-book-fill fs-4"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Kitap</small>
                                    <span class="fw-bold text-dark">@Model.BookTitle</span>
                                    <span class="badge bg-light text-dark border ms-1">@Model.CopyNumber</span>
                                </div>
                            </div>
                        </div>

                        <!-- Tarihler -->
                        <div class="col-12">
                            <hr class="my-3 opacity-10">
                            <div class="row text-center">
                                <div class="col-4">
                                    <small class="text-muted d-block">Veriliş Tarihi</small>
                                    <span class="fw-bold">@Model.LoanDate.ToString("dd.MM.yyyy")</span>
                                </div>
                                <div class="col-4 border-start border-end">
                                    <small class="text-muted d-block">Mevcut Son Teslim</small>
                                    <span class="fw-bold @(Model.IsOverdue ? "text-danger" : "text-success")">
                                        @Model.DueDate.ToString("dd.MM.yyyy")
                                    </span>
                                    @if (Model.IsOverdue)
                                    {
                                            <span class="badge bg-danger-subtle text-danger">@Model.OverdueDays gün gecikmiş</span>
                                    }
                                    else if (Model.RemainingDays > 0)
                                    {
                                            <span class="badge bg-success-subtle text-success">@Model.RemainingDays gün kaldı</span>
                                    }
                                </div>
                                <div class="col-4">
                                    <small class="text-muted d-block">Durum</small>
                                    <span class="badge bg-@statusColor fs-6">@statusText</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Düzenleme Formu -->
            <div class="card border-0 shadow-sm rounded-4 border-top border-4 border-primary">
                <div class="card-header bg-white py-3 border-0">
                    <h6 class="fw-bold mb-0"><i class="bi bi-pencil text-primary me-2"></i>Kaydı Düzenle</h6>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="MemberId" />
                        <input type="hidden" asp-for="MemberName" />
                        <input type="hidden" asp-for="CopyId" />
                        <input type="hidden" asp-for="BookTitle" />
                        <input type="hidden" asp-for="CopyNumber" />
                        <input type="hidden" asp-for="Author" />
                        <input type="hidden" asp-for="LoanDate" />
                        <input type="hidden" asp-for="ReturnDate" />
                        <input type="hidden" asp-for="Status" />

                        <!-- Teslim Tarihi -->
                        <div class="mb-4">
                            <label asp-for="DueDate" class="form-label fw-bold">
                                <i class="bi bi-calendar-event text-primary me-1"></i>Yeni Teslim Tarihi
                            </label>
                            <input type="date" asp-for="DueDate" class="form-control form-control-lg" 
                                   min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="DueDate" class="text-danger small"></span>
                            <small class="text-muted">Teslim tarihini ileriye veya bugüne ayarlayabilirsiniz.</small>
                        </div>

                        <!-- Notlar -->
                        <div class="mb-4">
                            <label asp-for="Notes" class="form-label fw-bold">
                                <i class="bi bi-sticky text-warning me-1"></i>Notlar
                            </label>
                            <textarea asp-for="Notes" class="form-control" rows="4" 
                                      placeholder="Örn: Cildi hasarlıydı, süre uzatıldı, üye ile görüşüldü..."></textarea>
                            <span asp-validation-for="Notes" class="text-danger small"></span>
                        </div>

                        <!-- Butonlar -->
                        <div class="d-flex gap-3">
                            <button type="submit" class="btn btn-primary btn-lg px-5 rounded-pill shadow">
                                <i class="bi bi-check-circle me-2"></i>Değişiklikleri Kaydet
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-light btn-lg px-4 border rounded-pill">
                                <i class="bi bi-x-circle me-2"></i>İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
