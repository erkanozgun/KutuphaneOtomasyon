@model Kutuphane.Application.Dtos.LoanDtos.LoanNotificationSummaryDto

@{
    ViewData["Title"] = "Bildirimler ve Uyarılar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4 py-4">

    <!-- Başlık -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold text-dark mb-0">
                <i class="bi bi-bell-fill text-warning me-2"></i>Bildirimler ve Uyarılar
            </h4>
            <p class="text-muted small mb-0">Gecikmiş ödünçler ve yaklaşan teslim tarihleri</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Index" class="btn btn-light border rounded-pill px-4">
                <i class="bi bi-arrow-left me-2"></i>Ödünç Listesi
            </a>
            <a asp-action="Overdue" class="btn btn-danger rounded-pill px-4">
                <i class="bi bi-exclamation-triangle me-2"></i>Gecikmiş Listesi
            </a>
        </div>
    </div>

    <!-- Özet Kartları -->
    <div class="row g-3 mb-4">
        <!-- Gecikmiş -->
        <div class="col-md-4">
            <div
                class="card border-0 shadow-sm h-100 @(Model.OverdueLoansCount > 0 ? "border-start border-4 border-danger" : "")">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-danger bg-opacity-10 text-danger rounded-circle d-flex align-items-center justify-content-center me-3"
                        style="width: 60px; height: 60px;">
                        <i class="bi bi-exclamation-triangle-fill fs-3"></i>
                    </div>
                    <div>
                        <h2 class="fw-bold mb-0 @(Model.OverdueLoansCount > 0 ? "text-danger" : "text-dark")">
                            @Model.OverdueLoansCount
                        </h2>
                        <span class="text-muted">Gecikmiş Ödünç</span>
                        @if (Model.TotalOverdueDays > 0)
                        {
                            <div class="badge bg-danger-subtle text-danger">Toplam @Model.TotalOverdueDays gün gecikme</div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Yaklaşan -->
        <div class="col-md-4">
            <div
                class="card border-0 shadow-sm h-100 @(Model.NearingDueDateCount > 0 ? "border-start border-4 border-warning" : "")">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-warning bg-opacity-10 text-warning rounded-circle d-flex align-items-center justify-content-center me-3"
                        style="width: 60px; height: 60px;">
                        <i class="bi bi-clock-history fs-3"></i>
                    </div>
                    <div>
                        <h2 class="fw-bold mb-0 @(Model.NearingDueDateCount > 0 ? "text-warning" : "text-dark")">
                            @Model.NearingDueDateCount
                        </h2>
                        <span class="text-muted">Teslim Tarihi Yaklaşan</span>
                        <div class="badge bg-warning-subtle text-warning">Önümüzdeki 3 gün</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bu Ay -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center me-3"
                        style="width: 60px; height: 60px;">
                        <i class="bi bi-calendar-check fs-3"></i>
                    </div>
                    <div>
                        <h2 class="fw-bold mb-0 text-primary">@Model.TotalLoansThisMonth</h2>
                        <span class="text-muted">Bu Ay Toplam Ödünç</span>
                        <div class="badge bg-primary-subtle text-primary">@DateTime.Now.ToString("MMMM yyyy")</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">

        <!-- Gecikmiş Ödünçler -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div
                    class="card-header bg-danger bg-opacity-10 py-3 border-0 d-flex justify-content-between align-items-center">
                    <h6 class="fw-bold text-danger mb-0">
                        <i class="bi bi-exclamation-octagon-fill me-2"></i>Gecikmiş Ödünçler (@Model.OverdueLoansCount)
                    </h6>
                    @if (Model.OverdueLoansCount > 0)
                    {
                        <a asp-action="Overdue" class="btn btn-sm btn-outline-danger rounded-pill">
                            Tümünü Gör <i class="bi bi-arrow-right ms-1"></i>
                        </a>
                    }
                </div>
                <div class="card-body p-0">
                    @if (Model.OverdueLoans.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var loan in Model.OverdueLoans)
                            {
                                <a asp-action="Details" asp-route-id="@loan.Id"
                                    class="list-group-item list-group-item-action py-3 border-0">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-danger bg-opacity-10 text-danger rounded-circle d-flex align-items-center justify-content-center me-3"
                                                style="width: 40px; height: 40px;">
                                                <i class="bi bi-book"></i>
                                            </div>
                                            <div>
                                                <h6 class="mb-0 fw-bold text-dark">@loan.BookTitle</h6>
                                                <small class="text-muted">@loan.MemberName</small>
                                            </div>
                                        </div>
                                        <div class="text-end">
                                            <span class="badge bg-danger rounded-pill fs-6">@loan.OverdueDays gün</span>
                                            <small class="d-block text-muted">@loan.DueDate?.ToString("dd.MM.yyyy")</small>
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-check-circle text-success display-3 mb-3"></i>
                            <h5 class="text-success">Harika!</h5>
                            <p class="text-muted mb-0">Gecikmiş ödünç bulunmuyor</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Yaklaşan Teslimler -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div
                    class="card-header bg-warning bg-opacity-10 py-3 border-0 d-flex justify-content-between align-items-center">
                    <h6 class="fw-bold text-warning mb-0">
                        <i class="bi bi-clock-fill me-2"></i>Yaklaşan Teslimler (@Model.NearingDueDateCount)
                    </h6>
                    <span class="badge bg-warning text-dark">3 gün içinde</span>
                </div>
                <div class="card-body p-0">
                    @if (Model.NearingDueLoans.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var loan in Model.NearingDueLoans)
                            {
                                var daysLeft = (loan.DueDate?.Date - DateTime.Now.Date)?.Days ?? 0;
                                string urgency = daysLeft == 0 ? "danger" : (daysLeft == 1 ? "warning" : "info");
                                string urgencyText = daysLeft == 0 ? "BUGÜN!" : (daysLeft == 1 ? "Yarın" : $"{daysLeft} gün");

                                <a asp-action="Details" asp-route-id="@loan.Id"
                                    class="list-group-item list-group-item-action py-3 border-0">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-@urgency bg-opacity-10 text-@urgency rounded-circle d-flex align-items-center justify-content-center me-3"
                                                style="width: 40px; height: 40px;">
                                                <i class="bi bi-hourglass-split"></i>
                                            </div>
                                            <div>
                                                <h6 class="mb-0 fw-bold text-dark">@loan.BookTitle</h6>
                                                <small class="text-muted">@loan.MemberName</small>
                                            </div>
                                        </div>
                                        <div class="text-end">
                                            <span class="badge bg-@urgency rounded-pill">@urgencyText</span>
                                            <small class="d-block text-muted">@loan.DueDate?.ToString("dd.MM.yyyy")</small>
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-calendar-check text-success display-3 mb-3"></i>
                            <h5 class="text-muted">Yaklaşan Teslim Yok</h5>
                            <p class="text-muted mb-0">Önümüzdeki 3 gün içinde teslim tarihi dolan kayıt yok</p>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>

    <!-- En Kritik Gecikme -->
    @if (Model.MostCriticalOverdue != null)
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm rounded-4 bg-danger bg-opacity-10 border border-danger">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <div class="bg-danger text-white rounded-circle d-flex align-items-center justify-content-center me-4"
                                    style="width: 70px; height: 70px;">
                                    <i class="bi bi-exclamation-triangle-fill fs-2"></i>
                                </div>
                                <div>
                                    <span class="badge bg-danger mb-2">EN KRİTİK GECİKME</span>
                                    <h4 class="fw-bold text-danger mb-1">@Model.MostCriticalOverdue.BookTitle</h4>
                                    <p class="mb-0 text-muted">
                                        <i class="bi bi-person me-1"></i>@Model.MostCriticalOverdue.MemberName
                                        <span class="mx-2">•</span>
                                        <i class="bi bi-calendar me-1"></i>Teslim:
                                        @Model.MostCriticalOverdue.DueDate?.ToString("dd.MM.yyyy")
                                    </p>
                                </div>
                            </div>
                            <div class="text-end">
                                <h1 class="display-4 fw-bold text-danger mb-0">@Model.MostCriticalOverdue.OverdueDays</h1>
                                <span class="text-danger fw-bold">GÜN GECİKMİŞ</span>
                                <div class="mt-3">
                                    <a asp-action="Details" asp-route-id="@Model.MostCriticalOverdue.Id"
                                        class="btn btn-danger rounded-pill px-4">
                                        <i class="bi bi-eye me-1"></i>Detayları Gör
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</div>

<style>
    .list-group-item:hover {
        background-color: #f8f9fa;
    }
</style>
