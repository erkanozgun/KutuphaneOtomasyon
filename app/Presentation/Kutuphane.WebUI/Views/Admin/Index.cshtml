@model Kutuphane.WebUI.Models.ViewModels.AdminDashboardViewModel

@{
    ViewData["Title"] = "Yönetim Paneli";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h3 class="fw-bold text-dark mb-0">Genel Bakış</h3>
        <p class="text-muted small mb-0">Kütüphane durum raporu ve istatistikler.</p>
    </div>

    <button class="btn btn-white position-relative shadow-sm border" type="button" data-bs-toggle="collapse"
        data-bs-target="#notificationArea" aria-expanded="false">
        <i class="bi bi-bell-fill text-warning"></i>
        <span class="d-none d-md-inline ms-2 text-secondary">Mesajlar</span>
        @if (Model.UnreadMessageCount > 0)
        {
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                @Model.UnreadMessageCount
                <span class="visually-hidden">okunmamış mesaj</span>
            </span>
        }
    </button>
</div>

<div class="collapse mb-4" id="notificationArea">
    <div class="card border-0 shadow-sm border-top border-4 border-warning">
        <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
            <h6 class="mb-0 fw-bold text-warning"><i class="bi bi-envelope-paper"></i> Okunmamış Mesajlar</h6>
        </div>
        <div class="list-group list-group-flush">
            @if (Model.RecentMessages != null && Model.RecentMessages.Any())
            {
                @foreach (var msg in Model.RecentMessages)
                {
                    <a asp-controller="AdminContact" asp-action="Details" asp-route-id="@msg.Id"
                        class="list-group-item list-group-item-action d-flex justify-content-between align-items-center px-4 py-3">
                        <div>
                            <div class="d-flex w-100 justify-content-between">
                                <strong class="mb-1 text-dark">@msg.Name</strong>
                                <small class="text-muted">@msg.CreatedDate.ToString("HH:mm")</small>
                            </div>
                            <p class="mb-1 small text-secondary">@msg.Subject</p>
                        </div>
                        <span class="badge bg-warning-subtle text-warning rounded-pill"><i
                                class="bi bi-circle-fill small"></i></span>
                    </a>
                }
                <a asp-controller="AdminContact" asp-action="Index"
                    class="list-group-item list-group-item-action px-4 py-3 text-center text-primary small fw-bold">
                    Tüm Mesajları Görüntüle <i class="bi bi-arrow-right"></i>
                </a>
            }
            else
            {
                <div class="p-3 text-center text-muted">Okunmamış yeni mesaj yok.</div>
            }
        </div>
    </div>
</div>

<div class="row g-3 mb-4">

    <!-- Toplam Kitap Kartı -->
    <div class="col-md-6 col-lg-3">
        <div class="card h-100 border-0 shadow-sm stat-card overflow-hidden">
            <div class="card-body position-relative">
                <div class="stat-icon bg-primary bg-opacity-10">
                    <i class="bi bi-journal-album text-primary"></i>
                </div>
                <div class="stat-content">
                    <span class="stat-label">Toplam Kitap</span>
                    <h2 class="stat-value counter" data-target="@Model.Stats.TotalBooks">0</h2>
                    <div class="stat-detail">
                        <div class="d-flex align-items-center gap-2 mb-2">
                            <span class="badge bg-success-subtle text-success"><i class="bi bi-check-circle-fill"></i>
                                @Model.Stats.AvailableCopies Rafta</span>
                            <span class="text-muted small">/ @Model.Stats.TotalCopies Kopya</span>
                        </div>
                        <div class="progress stat-progress">
                            @{
                                var copyPercent = Model.Stats.TotalCopies > 0 ? (Model.Stats.AvailableCopies * 100 /
                                Model.Stats.TotalCopies) : 0;
                            }
                            <div class="progress-bar bg-primary" role="progressbar" style="width: @copyPercent%"
                                aria-valuenow="@copyPercent" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <small class="text-muted">%@copyPercent müsait</small>
                    </div>
                </div>
                <a asp-controller="AdminBooks" asp-action="Index" class="stretched-link"></a>
            </div>
            <div class="card-accent bg-primary"></div>
        </div>
    </div>

    <!-- Toplam Üye Kartı -->
    <div class="col-md-6 col-lg-3">
        <div class="card h-100 border-0 shadow-sm stat-card overflow-hidden">
            <div class="card-body position-relative">
                <div class="stat-icon bg-success bg-opacity-10">
                    <i class="bi bi-people-fill text-success"></i>
                </div>
                <div class="stat-content">
                    <span class="stat-label">Toplam Üye</span>
                    <h2 class="stat-value counter" data-target="@Model.Stats.TotalMembers">0</h2>
                    <div class="stat-detail">
                        <div class="d-flex align-items-center gap-2 mb-2">
                            <span class="text-success fw-bold"><i class="bi bi-person-check-fill"></i>
                                @Model.Stats.ActiveMembers</span>
                            <span class="text-muted small">Aktif Kullanıcı</span>
                        </div>
                        <div class="progress stat-progress">
                            @{
                                var memberPercent = Model.Stats.TotalMembers > 0 ? (Model.Stats.ActiveMembers * 100 /
                                Model.Stats.TotalMembers) : 0;
                            }
                            <div class="progress-bar bg-success" role="progressbar" style="width: @memberPercent%"
                                aria-valuenow="@memberPercent" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <small class="text-muted">%@memberPercent aktif oran</small>
                    </div>
                </div>
                <a asp-controller="AdminMembers" asp-action="Index" class="stretched-link"></a>
            </div>
            <div class="card-accent bg-success"></div>
        </div>
    </div>

    <!-- Dışarıdaki Kitap Kartı -->
    <div class="col-md-6 col-lg-3">
        <div class="card h-100 border-0 shadow-sm stat-card overflow-hidden">
            <div class="card-body position-relative">
                <div class="stat-icon bg-warning bg-opacity-10">
                    <i class="bi bi-book-half text-warning"></i>
                </div>
                <div class="stat-content">
                    <span class="stat-label">Dışarıdaki Kitap</span>
                    <h2 class="stat-value counter text-warning" data-target="@Model.Stats.ActiveLoans">0</h2>
                    <div class="stat-detail">
                        <div class="d-flex align-items-center gap-2 mb-2">
                            <i class="bi bi-arrow-up-right-circle-fill text-warning"></i>
                            <span class="text-muted small">Şu an ödünç verilmiş</span>
                        </div>
                        <div class="d-flex align-items-center gap-1">
                            <div class="mini-bar bg-warning" style="width: 20%; height: 8px; border-radius: 4px;"></div>
                            <div class="mini-bar bg-warning" style="width: 20%; height: 8px; border-radius: 4px;"></div>
                            <div class="mini-bar bg-warning" style="width: 20%; height: 8px; border-radius: 4px;"></div>
                            <div class="mini-bar bg-light" style="width: 20%; height: 8px; border-radius: 4px;"></div>
                            <div class="mini-bar bg-light" style="width: 20%; height: 8px; border-radius: 4px;"></div>
                        </div>
                        <small class="text-muted mt-1 d-block">Ortalama 7 gün süreli</small>
                    </div>
                </div>
                <a asp-controller="AdminLoans" asp-action="Index" class="stretched-link"></a>
            </div>
            <div class="card-accent bg-warning"></div>
        </div>
    </div>

    <!-- Gecikmiş İade Kartı -->
    <div class="col-md-6 col-lg-3">
        <div
            class="card h-100 border-0 shadow-sm stat-card overflow-hidden @(Model.Stats.OverdueLoans > 0 ? "border-danger border-2" : "")">
            <div class="card-body position-relative">
                <div class="stat-icon bg-danger bg-opacity-10 @(Model.Stats.OverdueLoans > 0 ? "pulse-animation" : "")">
                    <i class="bi bi-exclamation-triangle-fill text-danger"></i>
                </div>
                <div class="stat-content">
                    <span class="stat-label">Gecikmiş İade</span>
                    <h2 class="stat-value counter text-danger" data-target="@Model.Stats.OverdueLoans">0</h2>
                    <div class="stat-detail">
                        @if (Model.Stats.OverdueLoans > 0)
                        {
                            <div class="alert alert-danger py-1 px-2 mb-0 d-flex align-items-center gap-2">
                                <i class="bi bi-bell-fill"></i>
                                <span class="small fw-bold">Acil müdahale gerekli!</span>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-success py-1 px-2 mb-0 d-flex align-items-center gap-2">
                                <i class="bi bi-check-circle-fill"></i>
                                <span class="small fw-bold">Tüm iadeler zamanında</span>
                            </div>
                        }
                    </div>
                </div>
                <a asp-controller="AdminLoans" asp-action="Overdue" class="stretched-link"></a>
            </div>
            <div class="card-accent bg-danger"></div>
        </div>
    </div>
</div>

<!-- Hızlı İşlemler -->
<div class="row g-3 mb-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-body py-3">
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                    <h6 class="mb-0 fw-bold text-dark"><i
                            class="bi bi-lightning-charge-fill text-warning me-2"></i>Hızlı İşlemler</h6>
                    <div class="d-flex gap-2 flex-wrap">
                        <a asp-controller="AdminBooks" asp-action="Create"
                            class="btn btn-primary btn-sm rounded-pill px-3">
                            <i class="bi bi-plus-lg me-1"></i> Yeni Kitap
                        </a>
                        <a asp-controller="AdminMembers" asp-action="Create"
                            class="btn btn-success btn-sm rounded-pill px-3">
                            <i class="bi bi-person-plus me-1"></i> Yeni Üye
                        </a>
                        <a asp-controller="AdminLoans" asp-action="Create"
                            class="btn btn-warning btn-sm rounded-pill px-3 text-dark">
                            <i class="bi bi-arrow-left-right me-1"></i> Ödünç Ver
                        </a>
                        <a asp-controller="AdminLoans" asp-action="Notifications"
                            class="btn btn-outline-danger btn-sm rounded-pill px-3 position-relative">
                            <i class="bi bi-bell-fill me-1"></i> Bildirimler
                            @if (Model.Stats.OverdueLoans > 0)
                            {
                                <span
                                    class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                    @Model.Stats.OverdueLoans
                                </span>
                            }
                        </a>
                        <a asp-controller="AdminContact" asp-action="Index"
                            class="btn btn-outline-secondary btn-sm rounded-pill px-3">
                            <i class="bi bi-envelope me-1"></i> Mesajlar
                            @if (Model.UnreadMessageCount > 0)
                            {
                                <span class="badge bg-danger ms-1">@Model.UnreadMessageCount</span>
                            }
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm h-100">
            <div
                class="card-header bg-white py-3 d-flex justify-content-between align-items-center border-bottom border-light">
                <h5 class="mb-0 fw-bold text-dark"><i class="bi bi-clock-history text-danger me-2"></i>Gecikme Raporu
                </h5>
                <a asp-controller="AdminLoans" asp-action="Overdue" class="btn btn-sm btn-light border text-danger">
                    Tümünü Gör <i class="bi bi-arrow-right-short"></i>
                </a>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary small text-uppercase">
                        <tr>
                            <th class="ps-4 py-3 border-0">Üye Bilgisi</th>
                            <th class="py-3 border-0">Kitap</th>
                            <th class="py-3 border-0">Son Tarih</th>
                            <th class="py-3 border-0">Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var loan in Model.OverdueLoans.Take(5))
                        {
                        // SATIRA TIKLAMA ÖZELLİĞİ EKLENDİ (onclick)
                            <tr style="cursor: pointer;"
                                onclick="window.location.href='@Url.Action("Details", "AdminLoans", new { id = loan.LoanId })'">
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary-subtle text-primary rounded-circle d-flex align-items-center justify-content-center"
                                            style="width: 40px; height: 40px;">
                                            <span class="fw-bold">@loan.MemberName.Substring(0, 1)</span>
                                        </div>
                                        <div class="ms-3">
                                            <h6 class="mb-0 fw-bold text-dark">@loan.MemberName</h6>
                                            <small class="text-muted">@loan.MemberPhone</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="d-block text-dark fw-medium">@loan.BookTitle</span>
                                    <small class="text-muted">Kopya: #@loan.CopyNumber</small>
                                </td>
                                <td>@loan.DueDate.ToShortDateString()</td>
                                <td>
                                    <span
                                        class="badge bg-danger-subtle text-danger border border-danger-subtle px-3 py-2 rounded-pill">
                                        <i class="bi bi-hourglass-bottom me-1"></i> @loan.OverdueDays Gün
                                    </span>
                                </td>
                            </tr>
                        }
                        @if (!Model.OverdueLoans.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center py-5 text-muted">
                                    <i class="bi bi-emoji-sunglasses fs-1 d-block mb-3 text-success"></i>
                                    <span class="d-block">Harika! Gecikmiş kitap bulunmuyor.</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-primary text-white py-3 d-flex align-items-center">
                <i class="bi bi-trophy-fill me-2"></i>
                <h5 class="mb-0 fw-bold">En Çok Okunanlar</h5>
            </div>
            <div class="list-group list-group-flush">
                @{
                    int rank = 1;
                }
                @foreach (var book in Model.PopularBooks)
                {
                // BURAYA DA TIKLAMA EKLENEBİLİR (KİTAP LİSTESİNE GİDER)
                    <a asp-controller="AdminBooks" asp-action="Index" asp-route-searchTerm="@book.Title"
                        class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-3 border-bottom-light">
                        <div class="d-flex align-items-center">
                            <span class="fw-bold text-secondary me-3 fs-5" style="width: 20px;">@(rank++)</span>
                            <div>
                                <h6 class="mb-0 fw-bold text-dark">@book.Title</h6>
                                <small class="text-muted">@book.Author</small>
                            </div>
                        </div>
                        <span class="badge bg-light text-primary border rounded-pill px-3">@book.BorrowCount ödünç</span>
                    </a>
                }
                @if (!Model.PopularBooks.Any())
                {
                    <div class="p-4 text-center text-muted">Veri yok.</div>
                }
                <div class="card-footer bg-white border-0 text-center py-3">
                    <a asp-action="Stats" class="btn btn-sm btn-outline-primary rounded-pill px-4">
                        İstatistik Detayları
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Stat Card Styles */
    .stat-card {
        transition: all 0.3s ease;
        position: relative;
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 1rem 2rem rgba(0, 0, 0, .12) !important;
    }

    .stat-card .card-accent {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 4px;
        border-radius: 0 0 0.5rem 0.5rem;
    }

    .stat-icon {
        position: absolute;
        top: 1rem;
        right: 1rem;
        width: 56px;
        height: 56px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }

    .stat-content {
        padding-right: 70px;
    }

    .stat-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        font-weight: 700;
        color: #6c757d;
        letter-spacing: 0.5px;
    }

    .stat-value {
        font-size: 2.25rem;
        font-weight: 800;
        color: #212529;
        margin: 0.25rem 0 0.75rem;
        line-height: 1;
    }

    .stat-detail {
        min-height: 50px;
    }

    .stat-progress {
        height: 6px;
        border-radius: 3px;
        background: #e9ecef;
    }

    /* Pulse Animation for Overdue Alert */
    .pulse-animation {
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0% {
            box-shadow: 0 0 0 0 rgba(220, 53, 69, 0.4);
        }

        70% {
            box-shadow: 0 0 0 15px rgba(220, 53, 69, 0);
        }

        100% {
            box-shadow: 0 0 0 0 rgba(220, 53, 69, 0);
        }
    }

    /* Hover Lift Effect */
    .hover-lift {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .hover-lift:hover {
        transform: translateY(-3px);
        box-shadow: 0 .5rem 1rem rgba(0, 0, 0, .15) !important;
    }

    /* Mini Bar Style */
    .mini-bar {
        transition: all 0.3s ease;
    }

    /* Rank Badge for Popular Books */
    .rank-badge {
        width: 28px;
        height: 28px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 0.85rem;
    }

    .rank-1 {
        background: linear-gradient(135deg, #ffd700, #ffb700);
        color: #1a1a1a;
    }

    .rank-2 {
        background: linear-gradient(135deg, #c0c0c0, #a0a0a0);
        color: #1a1a1a;
    }

    .rank-3 {
        background: linear-gradient(135deg, #cd7f32, #b87333);
        color: white;
    }
</style>

@section Scripts {
    <script>
        // Animasyonlu Sayaç Scripti
        document.addEventListener('DOMContentLoaded', function () {
            const counters = document.querySelectorAll('.counter');
            const speed = 200; // Animasyon hızı (daha düşük = daha hızlı)

            const animateCounter = (counter) => {
                const target = +counter.getAttribute('data-target');
                const count = +counter.innerText;
                const increment = target / speed * 10;

                if (count < target) {
                    counter.innerText = Math.ceil(count + increment);
                    setTimeout(() => animateCounter(counter), 20);
                } else {
                    counter.innerText = target;
                }
            };

            // Intersection Observer ile görünür olduğunda animasyonu başlat
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        animateCounter(entry.target);
                        observer.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.5 });

            counters.forEach(counter => observer.observe(counter));

            // Progress bar animasyonu
            const progressBars = document.querySelectorAll('.stat-progress .progress-bar');
            progressBars.forEach(bar => {
                const width = bar.style.width;
                bar.style.width = '0';
                setTimeout(() => {
                    bar.style.transition = 'width 1s ease-out';
                    bar.style.width = width;
                }, 300);
            });
        });
    </script>
}